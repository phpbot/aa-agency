{
    "name": "phpbot/aa-agency",
    "type": "library",
    "description": "Phpbot for AA News Agency in Turkey.",
    "keywords": [
        "phpbot",
        "aa agency"
    ],
    "homepage": "https://github.com/phpbot/aa-agency",
    "license": "MIT",
    "authors": [
        {
            "name": "Kodarsivi",
            "email": "info@phpbot.net",
            "homepage": "http://phpbot.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "guzzlehttp/guzzle": "^6.3.1|^7.0",
        "nesbot/carbon": "^2.17"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4|^9.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "PhpBot\\Aa\\Agency\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpBot\\Aa\\Agency\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
